{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.json", // Exclude JSON files (if any)
    "**/*.d.ts.json", // Exclude D types (if any)
    "**/*.svelte.js", // Exclude Svelte files
    "**/*.svelte.ts", // Exclude TypeScript translations of Svelte files
    "**/*.tsx", // Exclude TypeScript Expressions
    "**/*.js", // Exclude all JavaScript files in test directories
    "**/Animations/**/*" // Exclude specific test directory and its contents
  ]
}