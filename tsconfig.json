{
  "compilerOptions": {
    "allowJs": true,  
    "checkJs": false,  
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"  // 🔥 Định nghĩa thư mục output, tránh ghi đè lên src/
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/Animations/**/*"
  ]
}
